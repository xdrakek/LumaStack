# Server Configuration
PORT=3000
HOST=0.0.0.0
RUST_LOG=lumastack_backend=debug,tower_http=debug

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/lumastack

# Database Pool Configuration (optional, with sensible defaults)
# DB_MIN_CONNECTIONS=1           # Mínimo de conexiones en el pool (default: 1)
# DB_MAX_CONNECTIONS=10          # Máximo de conexiones en el pool (default: 10, recomendado 20-50 para producción)
# DB_ACQUIRE_TIMEOUT=30          # Timeout para adquirir conexión en segundos (default: 30)
# DB_IDLE_TIMEOUT=600            # Timeout de inactividad en segundos (default: 600)

# JWT Configuration (to be configured in later phases)
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRATION=86400

# Telegram Configuration (to be configured in later phases)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
